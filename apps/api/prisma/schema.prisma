generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Review {
  id             Int      @id @default(autoincrement())
  installationId Int
  repoOwner      String
  repoName       String
  prNumber       Int
  commitSha      String
  createdAt      DateTime @default(now())

  @@unique([repoOwner, repoName, prNumber, commitSha])
}
